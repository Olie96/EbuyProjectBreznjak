@using EbuyProject.ViewModels;
@{
    ViewBag.Title = "Home Page";
    var test = new EbuyProject.ViewModels.CartViewModel();
    test.Cars = new List<CarViewModel>();

}

<div style="border-left:1px black solid; position:absolute; left:1%;"/>
<h2>@Model.User.FirstName add items to your cart</h2>
<input type="button" value="Cars" style="width:100px; height:50px;" onclick="location.href='@Url.Action("CarsCategory", "Cart")'" />
<input type="button" value="Books" style="width:100px; height:50px;" onclick="location.href='@Url.Action("BooksCategory", "Cart")'" />
<input type="button" value="Electronics" style="width:100px; height:50px;" onclick="location.href='@Url.Action("ElectronicsCategory", "Cart")'" />
<input type="button" value="Sport" style="width:100px; height:50px;" onclick="location.href='@Url.Action("SportCategory", "Cart")'" />
<input type="button" value="Music" style="width:100px; height:50px;" onclick="location.href='@Url.Action("MusicCategory", "Cart")'" />
<input type="button" value="My Cart" style="width:100px; height:50px;" onclick="location.href='@Url.Action("GetCart", "Cart")'" />
<h3>Cars</h3>
<table class="table" >

    <tr>
        <th>Car Model</th>
        <th>Car Maker</th>
        <th>Car Price</th>
    </tr>
    @foreach (CarViewModel car in ViewBag.Cars)
    {
        <tr>
            <td>@car.CarModel</td>
            <td>@car.CarMaker</td>
            <td>@car.CarPrice</td>
            <td> <input type="button" value="Add To Cart" onclick= "location.href='@Url.Action("AddCarToCart", "Cart", new { id = car.CarId })'" /></td>
         </tr>         
     }
</table>

<hr />
