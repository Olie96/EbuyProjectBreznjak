@model IEnumerable<EbuyProject.ViewModels.SportViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<p>
    @using (Html.BeginForm("Index", "Sport", FormMethod.Get))
    {
        @Html.TextBox("search") <input type="submit" value="Search Items By Name" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Item Name", "Index", new { sortBy = ViewBag.sortNameParameter, search = Request.QueryString["search"] })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SportItemDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SportItemPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SportItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SportItemDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SportItemPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SportItemId }) |
            @Html.ActionLink("Details", "Details", new { id = item.SportItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SportItemId })
        </td>
    </tr>
}

</table>
<input type="button" value="1" onclick="location.href='@Url.Action("Index", "Sport", new { page = 1 } )'" />
<input type="button" value="2" onclick="location.href='@Url.Action("Index", "Sport", new { page = 2 } )'" />
<input type="button" value="3" onclick="location.href='@Url.Action("Index", "Sport", new { page = 3 } )'" />
